<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="edu.iu.iv.visualization.networks.jungnetworklayouts"
   name="JUNG Network Layouts"
   version="1.0.4"
   provider-name="Team IVC">

   <runtime>
      <library name="jungnetworklayouts.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="edu.iu.iv.junglib"/>
      <import plugin="edu.iu.iv.core"/>
   </requires>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="edu.iu.iv.visualization.networks.jungnetworklayouts.actionSet"
            visible="true"
            id="edu.iu.iv.visualization.networks.jungnetworklayouts.actionSet">
         <action
               label="Circle Layout"
               class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGCircleLayoutPlugin"
               tooltip="Select to launch Circle Layout"
               menubarPath="visualization/additions"
               id="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGCircleLayoutPlugin">
         </action>
         <action
               label="Fruchterman-Reingold Layout"
               class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGFruchtermanReingoldLayoutPlugin"
               tooltip="Select to launch Fruchterman-Reingold Layout"
               style="push"
               menubarPath="visualization/additions"
               id="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGFruchtermanReingoldLayoutPlugin"/>
		 <action
               label="Kamada-Kawai Layout"
               class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGKamadaKawaiLayoutPlugin"
               tooltip="Select to launch Kamada-Kawai Layout"
               menubarPath="visualization/additions"
               id="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGKamadaKawaiLayoutPlugin">
         </action>
		 <action
               label="Spring Layout"
               class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGSpringLayoutPlugin"
               tooltip="Select to launch Spring Layout"
               menubarPath="visualization/additions"
               id="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGSpringLayoutPlugin">
         </action>               
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGFruchtermanReingoldLayoutPlugin">
      </startup>
      <startup class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGCircleLayoutPlugin"/>
      <startup class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGKamadaKawaiLayoutPlugin"/>
      <startup class="edu.iu.iv.visualization.networks.jungnetworklayouts.JUNGSpringLayoutPlugin"/>
   </extension>

</plugin>
