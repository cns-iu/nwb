<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="edu.iu.informatics.modeling.smallworld"
   name="Smallworld Plug-in"
   version="1.0.0"
   provider-name="Team IVC">

   <runtime>
      <library name="smallworld.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>      
   	  <import plugin="org.eclipse.ui"/>   
      <import plugin="edu.iu.iv.core"/>
      <import plugin="edu.iu.informatics.shared"/>
   </requires>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="edu.iu.informatics.modeling.smallworld.actionSet"
            visible="true"
            id="edu.iu.informatics.modeling.smallworld.actionSet">
         <action
               label="Small World Modeling"
               class="edu.iu.informatics.modeling.smallworld.SmallWorldPlugin"
               tooltip="Select to launch Smallworld Plug-in"
               menubarPath="modeling/additions"
               id="edu.iu.informatics.modeling.smallworld.SmallWorldPlugin">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="edu.iu.informatics.modeling.smallworld.SmallWorldPlugin">
      </startup>
   </extension>

</plugin>
